@media (max-width: 1000px) and (min-width: 376px) {
    body{
        background-size: none;
        background-repeat: no-repeat;
        background-position: none;
        background-attachment: none;
    }

    #bloc {
        width: 85%;
    }

    #bloc h1 {
        font-size: 1em;
    }

    #bloc h2{
        text-shadow: 2px 2px 2px #090d0c;
        font-size: 1em;
    }
    #centres_interet img{
        width: 50px;
    }

    #contenu_about_me {
        font-size: 0.8em;
        display: block;
    }

    #contenu_about_me img {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 70%;
        padding-bottom: 20px;
    }

    #contenu_about_me p{
        margin: 0;
    }
    
    #centres_interet {
        flex-flow: row wrap;
    }
    
    #centres_interet img {
        margin: 20px;
    }

    .projet {
        width: 100px;
        height: 100px;
        border-radius: 20px;
        margin: 5px;
    }
    
    .title {
        font-size: 10px;
        height: 30px;
        width: 100%;
        text-align: center;
        padding: 0;
    }
    
    #contenu_formation {
        font-size: 0.8em;
        display: block;
    }

    #contenu_formation img,
    svg {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 50%;
        margin-bottom: 20px;
        border-radius: 0;
    }

    .liste_competences_c1{
        font-size: 0.7em;
        padding-left: 20px;
    }

    .liste_competences_c2 {
        font-size: 0.7em;
        padding-right: 20px;
    }

    #contenu_competences{
        font-size: 0.8em;
    }

    #contenu_competences hr{
        margin-left: 20px;
        margin-right: 20px;
    }

    #titre_liste{
        text-align: center;
        padding: 0;
        font-size: 0.5em;
    }

    #contenu_experience{
        display: flex;
        padding: 5px;
        flex-wrap: wrap;
        justify-content: space-around;
        font-size: 0.8em;
    }

    #contenu_experience h4{
        padding-left: 5px;
    }

    #contenu_experience ul{
        padding-left: 5px;
    }

    #contenu_experience p{
        padding-left: 5px;
    }

    #contenu_experience img{
        width: 50px;
    }


}